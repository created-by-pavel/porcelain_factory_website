model Product {
  id             Int          @id @default(autoincrement())
  classification String
  price          Float
  category       Category?    @relation(fields: [categoryId], references: [id])
  categoryId     Int?
  imageUrl       String
  titleId        Int
  title          ProductTitle @relation(fields: [titleId], references: [id])
}

model ProductTitle {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}
