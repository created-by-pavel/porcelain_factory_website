model User {
  id      String  @id
  name    String
  surname String
  phone   String
  email   String  @unique
  orders  Order[]
}

model Product {
  id             Int          @id @default(autoincrement())
  classification String
  category       Category?    @relation(fields: [categoryId], references: [id])
  categoryId     Int?
  imageUrl       String
  titleId        Int
  title          ProductTitle @relation(fields: [titleId], references: [id])
  orders         Order[]      @relation("OrderProduct")
}

model ProductTitle {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

model Order {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
  name      String
  surname   String
  email     String
  phone     String
  products  Product[] @relation("OrderProduct")
  totalCost Float     @default(0)
}
